package io.forbiddenbot.resources;

import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import io.forbiddenbot.domain.Admin;

@RestController
@RequestMapping(value="/admins")
public class AdminResource {
	
	@RequestMapping(method=RequestMethod.GET)
	public List<Admin> listar() {
		Admin adm1 = new Admin(1, "fb.com/otaldofrodo", "jaobulanii", "jao121311");
		Admin adm2 = new Admin(2, "fb.com/aaaa", "asdasd", "dsasda");
		
		List<Admin> lista = new ArrayList<>();
		
		lista.add(adm1);
		lista.add(adm2);
		
		return lista;
	}
}
